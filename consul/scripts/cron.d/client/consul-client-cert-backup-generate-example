# install this cron definition on all Consul clients
# backup certs/keys and print new certificates
0 0 1,10,20 * * root cp -r /etc/certs/consul*.* /etc/certs/backup
2 0 1,10,20 * * root bash /etc/consul-template.d/certificates/consul/build-consul-client-certs.sh 2>&1 | logger -t consulclientcertgen